<h1>Edit a Trip</h1>
<form action="/trips/<%= @trip.id %>" method="POST" style="width:60%;text-align:right;">
  <input class="edit_or_new_form" type="hidden" name="_method" value="PUT">
  <p>duration : <input class="edit_or_new_form" type="float" name="trip[duration]" placeholder="<%= @trip.duration%>"></p><br>
  <p>start_station_id : <input class="edit_or_new_form" type="float" name="trip[start_station_id]" placeholder="<%= @trip.start_station_id %>"></p><br>
  <p>end_station_id : <input class="edit_or_new_form" type="float" name="trip[end_station_id]" placeholder="<%= @trip.end_station_id%>"></p><br>
  <p>start_date : <input class="edit_or_new_form" type="datetime" name="trip[start_date]" placeholder="<%= @trip.start_date%>"></p><br>
  <p>end_date : <input class="edit_or_new_form" type="datetime" name="trip[end_date]" placeholder="<%= @trip.end_date %>"></p><br>
  <p>bike_id : <input class="edit_or_new_form" type="float" name="trip[bike_id]" placeholder="<%= @trip.bike_id %>"></p><br>
  <p>subscription_type : <input class="edit_or_new_form" type="text" name="trip[subscription_type]" placeholder="<%= @trip.subscription_type %>"></p><br>
  <p>zip_code : <input class="edit_or_new_form" type="float" name="trip[zip_code]" placeholder="<%= @trip.zip_code %>"></p><br>
  <input class="edit_or_new_form" type="submit" value="Update Trip">
</form>
