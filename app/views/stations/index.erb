<h1>All Stations</h1>

<form action="/stations/new" method="GET">
  <input type="submit" value="Create"/>
</form>

<% @stations.each do |station| %>
  <h1><%= station.name %></h1>
  <p><%= station.dock_count %></p>
  <p><%= station.installation_date %></p>
  <p><%= station.city_id %></p>
  <form action="/stations/<%= station.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete Station : <%= station.name %>">
  </form>
  <a href="/stations/<%= station.id %>/edit">Edit Station : <%= station.name %></a>
  <a href="/stations/<%= station.id %>">See Station : <%= station.name %></a>
<% end %>
